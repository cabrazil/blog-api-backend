# ============================================
# AMBIENTE: PRODUCTION (PostgreSQL VPS)
# ============================================

# Database Configuration - PostgreSQL VPS
DATABASE_URL="postgresql://xxxxxxxxx:xxxxxxxxxxx:xxxx/xxxx?connection_limit=10&pool_timeout=20"
# DIRECT_URL não é necessário para PostgreSQL Docker direto (sem pooler)
# DIRECT_URL="postgresql://xxxxxxxxxxx@xxxxxxxxxxxx:xxxxxx/xxxx"

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (ajuste para seus domínios de produção)
CORS_ORIGIN="https://your-production-domain.com,https://admin.yourdomain.com"

# Rate Limiting (mais restritivo em produção)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info

